<h1>Books</h1>
<br>

<table width="600">
	<tr>
		<th>Title</th>
		<th>Body</th>
	</tr>
<% @books.each do |book| %>
<tr>
<td><%= book.title %></td>
<td><%= book.body %></td>
<td><%= link_to "Show",book_path(book) %></td>
<td><%= link_to "Edit",edit_book_path(book) %></td>
<td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
</tr>
<% end %>
</table>


<h3>New book</h3>
<%= form_for(@book) do |f| %>

  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>Body</h5>
  <%= f.text_area :body %>
 <br>
  <%= f.submit 'Create Book' %>
<% end %>