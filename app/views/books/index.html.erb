<div class="box">
  <div class="container">
    <div class="row">
      <div class= "col-xs-3">
        <%=  notice %>

      <h2>User info</h2>

        <%= render 'users/info', user: @user %>

      <div class="new book">
      <h2>New book</h2>

        <%= render 'new_book', book: @book %>


      </div>

      </div>


    <div class="col-xs-9">
      <h1>Books</h1>
        <table class='table table-hover'>
          <thead>
          <tr>
            <td></td>
            <td><strong>Title</strong></td>
            <td><strong>Opinion</strong></td>
          </tr>
          </thead>

        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td><%= link_to user_path(book.user_id) do %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, format: 'jpeg', fallback: "no_image.jpg",size:'20x20' %>
            </td>
                <% end %>
            <td><%=link_to book.title, book_path(book.id) %></td>
            <td><%=link_to book.body %></td>
          </tr>
        </tbody>
        <% end %>
        </table>
    </div>
    </div>
  </div>
</div>

