<h1>Books</h1>
<br>

<table width="600">
	<tr>
		<th>Title</th>
		<th>Body</th>
	</tr>
<% @books.each do |book| %>
<tr>
<td><%= book.title %></td>
<td><%= book.body %></td>
<td><%= link_to "Show",book_path(book) %></td>
<td><%= link_to "Edit",edit_book_path(book) %></td>
<td>
  <% if @book.user == current_user %>
  <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
  <% end %>
</td>
</tr>
<% end %>
</table>


<h2>New book</h2>

  <% if @book.errors.any? %>
  <div class="alert alert-warning">
  	<h5><%= @book.errors.count %>errors prohibited this book from being saved:</h5>
      <ul>
      	<% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>Body</h5>
  <%= f.text_area :body %>
 <br>
  <%= f.submit 'Create Book' %>
<% end %>
<%= paginate @books %>