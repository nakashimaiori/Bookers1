<div class="box">
  <div class= "col-xs-3">
    <h2>User info</h2>
  </div>
  <div class= "col-xs-9">
  	<table width="80%">
  		<tr>
  		<td><strong>image</strong></td>
  		<td><strong>name</td>
  		</tr>
      <% @users.each do |user| %>
      <tr>
        <td>
          <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg",size:'40x40' %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= link_to"Show",user_path(user.id) %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
