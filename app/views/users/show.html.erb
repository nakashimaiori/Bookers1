<div class="col-xs-3">
  	<h2>User info</h2>


  		<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
  		<h5>name</h5>
  		<%= @user.name %>
  		<h5>introduction</h5>
  		<%= @user.introduction %>
    	<p><%= link_to "", edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>




<div class="newbook">
	<h2>New book</h2>
		<%= form_for(@book, url: books_path) do |f| %>
  		<h5>Title</h5>
  		<%= f.text_field :title,class: "col-xs-12" %>

  		<h5>Opinion</h5>
  		<%= f.text_area :body,class: "col-xs-12" %>
 		<nav>
  		<%= f.submit 'Create Book',class: "col-xs-12 btn btn-primary" %>
		</nav>
		<% end %>
</div>
</div>


<div class="col-xs-9">
	<h2>Books</h2>
	<table class='table table-hover'>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
		<% @books.each do |book| %>
		<%= link_to user_path(@user.id) do %>
		<tr>
		<td><%= attachment_image_tag book.user, :profile_image, :fill, 30, 30,fallback: "no_image.jpg",size:'30x30',format: 'no_image.jpg' %></td>
		<% end %>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		</td>
		</tr>
		<% end %>
		</table>
		</div>

